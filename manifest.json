{
  "manifest_version": 3,
  "name": "YouTube Time Countdown",
  "version": "1.0",
  "description": "Tracks and limits daily YouTube watching time",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}